{
  "name": "diwe-challenge-backend-jr",
  "version": "1.0.0",
  "description": "This is my solution to DIWE's technical challenge for the Junior Back-end Developer position. The challenge consists of building a REST API to serve data to a financial management system.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsnd --inspect=0.0.0.0:8181 --respawn src/server.ts",
    "dev:compose:up": "docker-compose --env-file ./.env.development up",
    "dev:compose:down": "docker-compose --env-file ./.env.development down",
    "dev:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "dev:migrate:reset": "dotenv -e .env.development -- prisma migrate reset",
    "dev:seed": "dotenv -e .env.development -- prisma db seed",
    "lint": "eslint --fix . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renatosbispo/diwe-challenge-backend-jr.git"
  },
  "author": "Renato Bispo <renatosilvabispo@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/renatosbispo/diwe-challenge-backend-jr/issues"
  },
  "homepage": "https://github.com/renatosbispo/diwe-challenge-backend-jr#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "dotenv-cli": "^5.1.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "prisma": "^3.12.0",
    "uuid": "^8.3.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
